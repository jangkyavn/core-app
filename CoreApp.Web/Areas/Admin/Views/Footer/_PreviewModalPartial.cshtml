<div class="modal fade text-left" id="previewModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary white">
                <h4 class="modal-title">Xem trước footer</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id='div_iframe'>
                    <iframe id='frame' src="@(Context.Request.Scheme)://@(Context.Request.Host)"></iframe>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-light" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
