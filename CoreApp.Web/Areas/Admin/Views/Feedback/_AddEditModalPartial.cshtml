<div class="modal fade text-left" id="addEditModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary white">
                <h4 class="modal-title" id="modalTitle"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form" id="feedbackForm">
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="hidId" value="" />
                    <input type="hidden" id="hidDateCreated" value="" />

                    <div class="card">
                        <div class="card-header" id="heading-links">
                            <h4 class="card-title">Thông tin phản hồi</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-body col-12">
                                    <div class="form-group">
                                        <label for="txtName">Tên khách hàng *</label>
                                        <input type="text" id="txtName" class="form-control" placeholder="Nhập tên khách hàng" name="name">
                                    </div>
                                    <div class="form-group">
                                        <label for="txtEmail">Email *</label>
                                        <input type="text" id="txtEmail" class="form-control" placeholder="Nhập email" name="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="txtPhoneNumber">Số điện thoại</label>
                                        <input type="text" id="txtPhoneNumber" class="form-control" placeholder="Nhập số điện thoại" name="phoneNumber">
                                    </div>
                                    <div class="form-group">
                                        <label for="txtMessage">Tin nhắn</label>
                                        <textarea id="txtMessage" class="form-control" placeholder="Nhập tin nhắn" name="message" rows="10"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="chkStatus">Trạng thái</label>
                                        <fieldset>
                                            <div class="float-left">
                                                <input type="checkbox" class="switch" data-on-label="Kích hoạt" data-off-label="Khóa" id="chkStatus" name="status" />
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-light" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
            </div>
        </div>
    </div>
</div>
