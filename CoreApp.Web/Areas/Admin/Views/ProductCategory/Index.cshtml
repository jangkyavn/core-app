@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{ 
    var canUpdate = (await AuthorizationService.AuthorizeAsync(User, "PRODUCT_CATEGORY", Operations.Update)).Succeeded;
    var canDelete = (await AuthorizationService.AuthorizeAsync(User, "PRODUCT_CATEGORY", Operations.Delete)).Succeeded;
}

@section Styles {
    <link href="~/lib/jstree/dist/themes/default/style.css" rel="stylesheet" />
    <link href="~/admin-side/css/plugins/forms/switch.min.css" rel="stylesheet" />
    <style type="text/css">
        #txtKeyword {
            width: 75%;
        }

        #iImage {
            width: 200px;
        }

        #btnRemoveImage {
            position: relative;
            right: 54px;
            top: -36px;
        }
    </style>
}

<input type="hidden" id="hidCanUpdate" value="@canUpdate" />
<input type="hidden" id="hidCanDelete" value="@canDelete" />

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">Danh mục sản phẩm</h3>
            </div>
            <div class="content-header-right col-md-6 col-12">
                <button type="button" class="btn btn-info float-md-right ml-1" id="btnCollapseTree" data-toggle="tooltip" data-placement="top" title="Thu gọn">
                    <i class="fa fa-compress"></i>
                </button>
                <button type="button" class="btn btn-primary float-md-right ml-1" id="btnExpandTree" data-toggle="tooltip" data-placement="top" title="Mở rộng">
                    <i class="fa fa-expand"></i>
                </button>
                @if ((await AuthorizationService.AuthorizeAsync(User, "PRODUCT_CATEGORY", Operations.Create)).Succeeded)
                {
                    <button type="button" class="btn btn-success float-md-right" id="btnAddNew" data-toggle="tooltip" data-placement="top" title="Thêm mới">
                        <i class="fa fa-plus"></i>
                    </button>
                }
            </div>
        </div>
        <div class="content-body">
            <!-- Responsive tables start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row d-flex justify-content-between mx-1">
                                <input type="text" class="form-control" id="txtKeyword" placeholder="Nhập từ khóa cần tìm" />
                                <button class="btn btn-primary" id="btnSearch">
                                    <i class="fa fa-search"></i> Tìm kiếm
                                </button>
                                <button class="btn btn-default" id="btnRefresh">
                                    <i class="fa fa-refresh"></i> Làm mới
                                </button>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="container" id="treeContainer">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Responsive tables end -->
        </div>
    </div>
</div>

<partial name="_AddEditModalPartial" />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/lib/jstree/dist/jstree.js"></script>
    <script src="~/admin-side/vendors/js/forms/toggle/bootstrap-checkbox.min.js"></script>
    <script src="~/admin-side/js/scripts/forms/switch.min.js"></script>
    <script src="~/admin-side/app/controllers/product-category/index.js" asp-append-version="true"></script>
    <script>
        var productCategory = new productCategoryController();
        productCategory.initialize();
    </script>
}
