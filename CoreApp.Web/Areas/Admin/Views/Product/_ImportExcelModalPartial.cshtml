<div class="modal fade text-left" id="importExcelModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary white">
                <h4 class="modal-title">Nhập tập tin excel</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form row" id="importExcelForm">
                    @Html.AntiForgeryToken()

                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-body">
                                    <div class="form-group">
                                        <input type="file" id="fileImportExcel" />
                                    </div>
                                    <div class="form-group">
                                        <label for="ddlCategoryImportExcel">Danh mục</label>
                                        <select class="form-control" id="ddlCategoryImportExcel" required></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-light" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnSaveImportExcel">Lưu</button>
            </div>
        </div>
    </div>
</div>
