@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@section Styles {
    <style type="text/css">
        #txtKeyword {
            width: 75%;
        }

        .root-active {
            background-color: rgba(245, 247, 250, 0.5);
        }
    </style>
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">Thông báo</h3>
            </div>
            <div class="content-header-right col-md-6 col-12">
                @if ((await AuthorizationService.AuthorizeAsync(User, "ANNOUNCEMENT", Operations.Delete)).Succeeded)
                {
                    <button type="button" class="btn btn-danger float-md-right ml-1" id="btnDeleteMultiple" data-toggle="tooltip" data-placement="top" title="Xóa nhiều" disabled>
                        <i class="fa fa-trash"></i>
                    </button>
                }
            </div>
        </div>
        <div class="content-body">
            <!-- Responsive tables start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row d-flex justify-content-between mx-1">
                                <input type="text" class="form-control" id="txtKeyword" placeholder="Nhập từ khóa cần tìm" />
                                <button class="btn btn-primary" id="btnSearch">
                                    <i class="fa fa-search"></i> Tìm kiếm
                                </button>
                                <button class="btn btn-default" id="btnRefresh">
                                    <i class="fa fa-refresh"></i> Làm mới
                                </button>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="table-responsive">
                                <table class="table table-hover table-responsive-md">
                                    <caption>
                                        <div class="row mx-1">
                                            <div class="col-sm-3">
                                                <div class="d-flex flex-row justify-content-around align-items-center">
                                                    <span>
                                                        Hiển thị
                                                    </span>
                                                    <select class="form-control" id="ddlShowPage" style="width: 90px;">
                                                        <option value="10" selected="selected">10</option>
                                                        <option value="20">20</option>
                                                        <option value="50">50</option>
                                                        <option value="100">100</option>
                                                        <option value="-1">Tất cả</option>
                                                    </select>
                                                    <span>
                                                        mục
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-9">
                                                <ul id="paginationUL" class="justify-content-end mr-1"></ul>
                                            </div>
                                        </div>
                                    </caption>
                                    <thead>
                                        <tr>
                                            <th style="width:5%;">#</th>
                                            <th style="width:5%;">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="chkAll">
                                                    <label class="custom-control-label" for="chkAll"></label>
                                                </div>
                                            </th>
                                            <th style="width: 15%;">Tên tạo</th>
                                            <th style="width: 15%;">Tiêu đề</th>
                                            <th style="width: 30%;">Nội dung</th>
                                            <th style="width: 15%;">Ngày tạo</th>
                                            <th style="width: 10%;">Đã đọc</th>
                                            <th width="5%"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbodyContent"></tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="8">
                                                Hiển thị <span id="lblFirstRow"></span> đến <span id="lblLastRow"></span> trong số <strong id="lblTotalRecords"></strong> mục
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Responsive tables end -->
        </div>
    </div>
</div>

<script id="tbodyTemplate" type="x-tmpl-mustache">
    <tr>
        <th>{{NumberOrder}}</th>
        <td>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input chk-item" id="chkItem{{Id}}">
                <label class="custom-control-label" for="chkItem{{Id}}"></label>
            </div>
        </td>
        <td>{{FullName}}</td>
        <td>{{Title}}</td>
        <td>{{Content}}</td>
        <td>{{DateCreated}}</td>
        <td>{{{HasRead}}}</td>
        <td>
            @if ((await AuthorizationService.AuthorizeAsync(User, "ANNOUNCEMENT", Operations.Delete)).Succeeded)
            {
                <button class="btn btn-danger btn-delete" data-id="{{Id}}">
                    <i class="fa fa-trash"></i>
                </button>
            }
        </td>
    </tr>
</script>

@*<partial name="_AddEditModalPartial" />*@

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/lib/mustache/mustache.js"></script>
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.js"></script>
    <script src="~/admin-side/app/controllers/announcement/index.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var announcement = new AnnouncementController();
        announcement.initialize();
    </script>
}
