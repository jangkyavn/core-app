<div class="modal fade" id="addEditModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary white">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="functionForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="hidSortOrder" value="0" />
                    <input type="hidden" id="hidIsAddNew" value="" name="isAddNew" />

                    <div class="form-body">
                        <div class="form-group">
                            <label for="txtId">Mã chức năng chức năng *</label>
                            <input type="text" id="txtId" class="form-control" placeholder="Nhập mã chức năng" name="id">
                        </div>
                        <div class="form-group">
                            <label for="txtName">Tên chức năng *</label>
                            <input type="text" id="txtName" class="form-control" placeholder="Nhập tên chức năng" name="name">
                        </div>
                        <div class="form-group">
                            <label for="ddlParent">Chức năng cha</label>
                            <select id="ddlParent" class="form-control" name="parentId"></select>
                        </div>
                        <div class="form-group">
                            <label for="txtURL">Đường dẫn</label>
                            <input type="text" id="txtURL" class="form-control" placeholder="Nhập đường dẫn" name="url">
                        </div>
                        <div class="form-group">
                            <label for="ddlIcon">Biểu tượng</label>
                            <select id="ddlIcon" class="form-control" name="iconCss"></select>
                        </div>
                        <div class="form-group">
                            <label for="chkStatus">Trạng thái</label>
                            <fieldset>
                                <div class="float-left">
                                    <input type="checkbox" class="switch" data-on-label="Kích hoạt" data-off-label="Khóa" id="chkStatus" name="status" />
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-light" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
            </div>
        </div>
    </div>
</div>