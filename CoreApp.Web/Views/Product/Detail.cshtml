@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@model DetailViewModel
@{
    ViewData["Title"] = Model.Product.Name;
    ViewData["MetaKeyword"] = Model.Product.SeoKeywords;
    ViewData["MetaDescription"] = Model.Product.SeoDescription;

    var product = Model.Product;
}

@section Styles {
    <style type="text/css">
        td {
            text-align: center;
        }

        .text-danger {
            color: red !important;
        }

        .reviews-content-left {
            height: 300px;
            overflow-y: auto;
            overflow-x: hidden;
        }
    </style>
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    @Html.Raw(Model.Breadcrumbs)
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<div class="main-container col1-layout">
    <div class="container">
        <div class="row">
            <div class="col-main">
                <div class="product-view-area">
                    <div class="product-big-image col-xs-12 col-sm-5 col-lg-5 col-md-5">
                        @if (product.HotFlag)
                        {
                            <div class="icon-sale-label sale-left">Hot</div>
                        }
                        @if ((DateTime.Now - product.DateCreated.Value).Days <= 7)
                        {
                            <div class="icon-new-label new-right">Mới</div>
                        }
                        <div class="large-image">
                            <a href="/uploaded/images/products/@product.Image" class="cloud-zoom" id="zoom1" rel="useWrapper: false, adjustY:0, adjustX:20">
                                <img class="zoom-img" src="/uploaded/images/products/@product.Image" alt="@product.Name">
                            </a>
                        </div>
                        <div class="flexslider flexslider-thumb">
                            <ul class="previews-list slides">
                                <li>
                                    <a href='/uploaded/images/products/@product.Image' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '/uploaded/images/products/@product.Image' ">
                                        <img src="/uploaded/images/products/@(product.Image)?w=98&h=114" alt="@product.Name" />
                                    </a>
                                </li>
                                @foreach (var item in Model.ProductImages)
                                {
                                    <li>
                                        <a href='@item.Path' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '@item.Path' ">
                                            <img src="@(item.Path)?w=98&h=114" alt="@item.Caption" />
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <!-- end: more-images -->
                    </div>
                    <div class="col-xs-12 col-sm-7 col-lg-7 col-md-7 product-details-area">
                        <div class="product-name">
                            <h1>@product.Name</h1>
                        </div>
                        <div class="price-box">
                            @if (product.PromotionPrice.HasValue)
                            {
                                <p class="special-price">
                                    <span class="price"> @product.PromotionPrice.Value.ToString("N0") </span>
                                </p>
                                <p class="old-price">
                                    <span class="price"> @product.Price.ToString("N0") </span>
                                </p>
                            }
                            else
                            {
                                <span class="regular-price">
                                    <span class="price">@product.Price.ToString("N0")</span>
                                </span>
                            }
                        </div>
                        <div class="ratings">
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <p class="rating-links"> <a href="#">1 Đánh giá(s)</a>
                            <p class="availability @(product.Status==CoreApp.Data.Enums.Status.Active?"in-stock":"out-of-stock") pull-right">
                                Tình trạng: <span>@(product.Status == CoreApp.Data.Enums.Status.Active ? "Còn hàng" : "Hết hàng")</span>
                            </p>
                        </div>
                        <div class="short-description">
                            <h2>Mô tả nhanh</h2>
                            <p>@product.Description</p>
                        </div>
                        <div class="product-color-size-area">
                            <div class="color-area">
                                <h2 class="saider-bar-title">Màu sắc</h2>
                                <div class="color">
                                    <select asp-items="Model.Colors" id="ddlColorId"></select>
                                </div>
                            </div>
                            <div class="size-area">
                                <h2 class="saider-bar-title">Kích cỡ</h2>
                                <div class="size">
                                    <select asp-items="Model.Sizes" id="ddlSizeId"></select>
                                </div>
                            </div>
                        </div>
                        <div class="product-variation">
                            <form action="#" method="post">
                                <div class="cart-plus-minus">
                                    <label for="qty">Số lượng:</label>
                                    <div class="numbers-row">
                                        <div onClick="var result = document.getElementById('txtQuantity'); var qty = result.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 0 ) result.value--;return false;" class="dec qtybutton"><i class="fa fa-minus">&nbsp;</i></div>
                                        <input type="text" class="qty" title="Qty" value="1" maxlength="12" id="txtQuantity" name="qty">
                                        <div onClick="var result = document.getElementById('txtQuantity'); var qty = result.value; if( !isNaN( qty )) result.value++;return false;" class="inc qtybutton"><i class="fa fa-plus">&nbsp;</i></div>
                                    </div>
                                </div>
                                <button class="button pro-add-to-cart" id="btnAddToCart" title="Thêm vào giỏ" type="button" data-id="@product.Id">
                                    <span><i class="fa fa-shopping-basket"></i> Thêm vào giỏ</span>
                                </button>
                            </form>
                        </div>
                        <div class="product-cart-option">
                            <ul>
                                <li><a href="#"><i class="fa fa-heart-o"></i><span>Thêm vào yêu thích</span></a></li>
                                <li><a href="#"><i class="fa fa-link"></i><span>Thêm vào so sánh</span></a></li>
                            </ul>
                        </div>
                        <div class="pro-tags">
                            <div class="pro-tags-title">Thẻ:</div>
                            &nbsp;
                            @foreach (var item in Model.Tags)
                            {
                                <a href="/pt.@(item.Id).html" style="font-size: 15px;">
                                    <span class="label label-info">@item.Name</span>
                                </a>
                            }
                        </div>
                        <div class="share-box">
                            <div class="title">Chia sẻ với:</div>
                            <div class="addthis_inline_share_toolbox_8oqw"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-overview-tab">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="product-tab-inner">
                                <ul id="product-detail-tab" class="nav nav-tabs product-tabs">
                                    <li class="active"> <a href="#description" data-toggle="tab"> Mô tả chi tiết </a> </li>
                                    <li> <a href="#reviews" data-toggle="tab">Đánh giá</a> </li>
                                </ul>
                                <div id="productTabContent" class="tab-content">
                                    <div class="tab-pane fade in active" id="description">
                                        <div class="std">
                                            @Html.Raw(product.Content)
                                        </div>
                                    </div>
                                    <div id="reviews" class="tab-pane fade">
                                        <div class="col-sm-5 col-lg-5 col-md-5">
                                            <div class="reviews-content-left">
                                                <h2>Đánh giá của khách hàng</h2>
                                                <div id="reviewListContent"></div>
                                            </div>
                                        </div>
                                        <div class="col-sm-7 col-lg-7 col-md-7">
                                            <div class="reviews-content-right">
                                                <h2>
                                                    Viết nhận xét của riêng bạn
                                                </h2>
                                                @if (SignInManager.IsSignedIn(User))
                                                {
                                                    <form id="reviewForm">
                                                        @Html.AntiForgeryToken()

                                                        <input type="hidden" id="hidReviewId" value="0" />
                                                        <input type="hidden" id="hidProductId" value="@product.Id" />
                                                        <input type="hidden" id="hidDateCreated" />

                                                        <div class="reviews-table">
                                                            <table>
                                                                <tbody>
                                                                    <tr>
                                                                        <th>1 sao</th>
                                                                        <th>2 sao</th>
                                                                        <th>3 sao</th>
                                                                        <th>4 sao</th>
                                                                        <th>5 sao</th>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><input type="radio" name="rating" value="1"></td>
                                                                        <td><input type="radio" name="rating" value="2"></td>
                                                                        <td><input type="radio" name="rating" value="3"></td>
                                                                        <td><input type="radio" name="rating" value="4"></td>
                                                                        <td><input type="radio" name="rating" value="5"></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                            <label id="errorRating"></label>
                                                        </div>
                                                        <div class="form-area">
                                                            <div class="form-element">
                                                                <label>Nhận xét:</label>
                                                                <textarea class="form-control" name="content" id="txtContent"></textarea>
                                                            </div>
                                                            <div class="buttons-set">
                                                                <button class="button submit" title="Submit Review" type="button" id="btnReview">
                                                                    <span><i class="fa fa-thumbs-up"></i> &nbsp;Đánh giá</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button type="button" class="button submit" title="Đăng nhập" onclick="window.location.href='/Account/Login?returnUrl=@Context.Request.Path'">
                                                        <span><i class="fa fa-sign-in"></i> &nbsp;Đăng nhập</span>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Container End -->
<!-- Related Product Slider -->
@if (Model.RelatedProducts.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="related-product-area">
                    <div class="page-header">
                        <h2>Sản phẩm liên quan</h2>
                    </div>
                    <div class="related-products-pro">
                        <div class="slider-items-products">
                            <div id="related-product-slider" class="product-flexslider hidden-buttons">
                                <div class="slider-items slider-width-col4 fadeInUp">
                                    @foreach (var item in Model.RelatedProducts)
                                    {
                                        var urlImage = $"/uploaded/images/products/{item.Image}?w=265&h=309";
                                        var url = "/" + item.SeoAlias + "-p." + item.Id + ".html";

                                        <div class="product-item">
                                            <div class="item-inner">
                                                <div class="product-thumbnail">
                                                    @if (item.HotFlag)
                                                    {
                                                        <div class="icon-sale-label sale-left">Hot</div>
                                                    }
                                                    @if ((DateTime.Now - item.DateCreated.Value).Days <= 7)
                                                    {
                                                        <div class="icon-new-label new-right">Mới</div>
                                                    }
                                                    <div class="pr-img-area">
                                                        <a title="@item.Name" href="@url">
                                                            <figure>
                                                                <img class="first-img" src="@urlImage" alt="HTML template">
                                                                <img class="hover-img" src="@urlImage" alt="HTML template">
                                                            </figure>
                                                        </a>
                                                    </div>
                                                    <div class="pr-info-area">
                                                        <div class="pr-button">
                                                            <div class="mt-button add_to_wishlist">
                                                                <a href="wishlist.html">
                                                                    <i class="fa fa-heart-o"></i>
                                                                </a>
                                                            </div>
                                                            <div class="mt-button add_to_compare">
                                                                <a href="compare.html">
                                                                    <i class="fa fa-link"></i>
                                                                </a>
                                                            </div>
                                                            <div class="mt-button quick-view">
                                                                <a href="quick_view.html">
                                                                    <i class="fa fa-search"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="item-info">
                                                    <div class="info-inner">
                                                        <div class="item-title">
                                                            <a title="@item.Name" href="@url">@item.Name </a>
                                                        </div>
                                                        <div class="item-content">
                                                            <div class="rating">
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                            </div>
                                                            <div class="item-price">
                                                                <div class="price-box">
                                                                    @if (item.PromotionPrice.HasValue)
                                                                    {
                                                                        <p class="special-price">
                                                                            <span class="price"> @item.PromotionPrice.Value.ToString("N0") </span>
                                                                        </p>
                                                                        <p class="old-price">
                                                                            <span class="price"> @item.Price.ToString("N0") </span>
                                                                        </p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="regular-price">
                                                                            <span class="price">@item.Price.ToString("N0")</span>
                                                                        </span>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="pro-action">
                                                                <button type="button" class="add-to-cart" onclick="window.location.href='@url'">
                                                                    <span> Mua ngay</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Related Product Slider End -->

<partial name="~/Views/Shared/_ServicePartial.cshtml" />

<script id="templateReviewListItem" type="x-tmpl-mustache">
    <div class="review-ratting" style="border-bottom: 1px solid #e5e5e5">
        <div class="row">
            <div class="col-sm-9 lbl-fullname-{{Id}}">{{FullName}}</div>
            <div class="dropdown col-sm-3 review-setting-{{Id}}" style="display: none;">
                <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                    <i class="fa fa-cog"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" class="btn-edit-review">Sửa</a></li>
                    <li><a href="#" class="btn-delete-review">Xóa</a></li>
                </ul>
            </div>
        </div>
        <div style="clear: both;"></div>
        <p>
            <div class="rating">{{{Rating}}}</div>
        </p>
        <p>
            {{Content}}
            &nbsp;<small>{{DateCreated}}</small>
        </p>
    </div>
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5c07bc13ede2b97e"></script>
    <script src="~/client-side/js/jquery.flexslider.js"></script>
    <script src="~/client-side/js/cloud-zoom.js"></script>
    <script src="~/client-side/app/controllers/product/detail.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var productDetail = new ProductDetail();
        productDetail.initialize();
    </script>
}