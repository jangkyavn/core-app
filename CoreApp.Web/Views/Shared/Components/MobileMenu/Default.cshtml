@model List<ProductCategoryViewModel>

<div id="mobile-menu">
    <ul>
        <li>
            <a href="/trang-chu.html" class="home1">Trang chủ</a>
        </li>
        <li>
            <a href="javascript:void(0);">Danh mục sản phẩm</a>
            <ul>
                @foreach (var item in Model.Where(x => x.ParentId == null))
                {
                    <li>
                        <a href="/@item.SeoAlias-c.@(item.Id).html">@item.Name </a>
                        @if (Model.Any(x => x.ParentId == item.Id))
                        {
                            <ul>
                                @foreach (var subItem in Model.Where(x => x.ParentId == item.Id))
                                {
                                    <li>
                                        <a href="/@subItem.SeoAlias-c.@(subItem.Id).html">@subItem.Name</a>

                                        <ul>
                                            @foreach (var superSubItem in Model.Where(x => x.ParentId == subItem.Id))
                                            {
                                                <li>
                                                    <a href="/@superSubItem.SeoAlias-c.@(superSubItem.Id).html">@superSubItem.Name</a>
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </li>
    </ul>
</div>