@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject IViewLocalizer Localizer

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <input type="submit" style="display:none;" />
    </form>
    <li>
        <div class="dropdown">
            <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                <span>@User.GetSpecificClaim(CommonConstants.UserClaims.FullName)</span>
                <i class="fa fa-angle-down"></i>
            </a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="/quan-ly-tai-khoan.html">@Localizer["ACCOUNT_INFORMATION"]</a></li>
                <li><a href="wishlist.html">@Localizer["WISHLIST"]</a></li>
                <li><a href="orders_list.html">@Localizer["TRACK_ORDERS"]</a></li>
                <li class="divider"></li>
                <li><a href="#" onclick="document.getElementById('logoutForm').submit()">@Localizer["LOGOUT"]</a></li>
            </ul>
        </div>
    </li>
}
else
{
    <li><a href="/dang-nhap.html"><span>@Localizer["LOGIN"]</span></a></li>
}