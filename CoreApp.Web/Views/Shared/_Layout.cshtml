@using Microsoft.AspNetCore.Localization

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic page needs -->
    <meta charset="utf-8">
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <![endif]-->
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["MetaKeyword"]">
    <meta name="keywords" content="@ViewData["MetaDescription"]" />

    <!-- Mobile specific metas  -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicons Icon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/client-side/favicon.ico">

    <environment names="Development">
        <link href="~/lib/toastr/build/toastr.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/client-side/style.css">
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/toastr/build/toastr.min.css" rel="stylesheet" />
        <link href="~/client-side/style.min.css" rel="stylesheet" />
    </environment>

    @RenderSection("Styles", required: false)
</head>

<body class="@ViewData["BodyClass"]">
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- mobile menu -->
    @await Component.InvokeAsync("MobileMenu")
    <!-- end mobile menu -->
    <div id="page">
        <!-- Header -->
        <partial name="_HeaderPartial" />
        <!-- end header -->
        <nav>
            <div class="container">
                <div class="row">
                    <div class="mm-toggle-wrap">
                        <div class="mm-toggle"><i class="fa fa-align-justify"></i> </div>
                    </div>
                    <div class="col-md-3 col-sm-3 mega-container hidden-xs">
                        @await Component.InvokeAsync("CategoryMenu")
                    </div>
                    <div class="col-md-9 col-sm-9 jtv-megamenu">
                        <partial name="_MainMenuPartial" />
                    </div>
                </div>
            </div>
        </nav>

        @RenderBody()

        <!-- Footer -->
        @await Component.InvokeAsync("Footer")
        <a href="#" id="back-to-top" title="Back to top"><i class="fa fa-angle-up"></i></a>
        <!-- End Footer -->
    </div>

    <!-- jquery js -->
    <script type="text/javascript" src="~/client-side/js/jquery.min.js"></script>

    <!-- bootstrap js -->
    <script type="text/javascript" src="~/client-side/js/bootstrap.min.js"></script>

    <!-- owl.carousel.min js -->
    <script type="text/javascript" src="~/client-side/js/owl.carousel.min.js"></script>

    <!-- jquery.mobile-menu js -->
    <script src="~/client-side/js/mobile-menu.min.js"></script>

    <!--jquery-ui.min js -->
    <script src="~/client-side/js/jquery-ui.min.js"></script>

    <!-- main js -->
    <script src="~/client-side/js/main.min.js"></script>

    <!-- countdown js -->
    <script src="~/client-side/js/countdown.min.js"></script>

    <!-- Slider Js -->
    <script src="~/client-side/js/revolution-slider.min.js"></script>
    
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/lib/mustache/mustache.min.js"></script>

    <script src="~/client-side/app/shared/localize/resources.@(requestCulture.RequestCulture.Culture.Name).js" asp-append-version="true"></script>

    <environment names="Development">
        <script src="~/client-side/app/shared/core.js" asp-append-version="true"></script>
        <script src="~/client-side/app/controllers/base/index.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/client-side/app/shared/core.min.js"></script>
        <script src="~/client-side/app/controllers/base/index.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
